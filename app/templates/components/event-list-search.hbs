        <option value="Designation">{{translate "Designation"}}</option>
        <option value="DateFrom">{{translate "DateFrom"}}</option>
        <option value="SubscriptionTo">{{translate "SubscriptionTo"}}</option>-->
      </select>
    </div>
</div>

{{yield filteredEvents}}
