{{#unless hideHeading}}
  <h3 class="uk-margin-small">{{area.name}}</h3>
{{/unless}}
<ul class="uk-nav uk-nav-default">
  {{#link-to "list.index" area.key tagName="li" activeClass="uk-active"}}
    {{link-to (translate "overview") "list.index" area.key}}
  {{/link-to}}
  {{#each area.categoryKeys as |categoryKey|}}
    {{#link-to "list.category" area.key categoryKey tagName="li" activeClass="uk-active"}}
      {{link-to (get (get area.categories categoryKey) "name") "list.category" area.key categoryKey}}
    {{/link-to}}
  {{/each}}
</ul>