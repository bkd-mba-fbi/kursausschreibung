<div class="js-upload" uk-form-custom>
    <input id="file{{field.id}}" class="uk-input" type="file" accept={{field.acceptFileType}} name={{field.id}} required={{field.options.required}} disabled={{field.options.disabled}}>
    {{#if field.options.required}}
    <button id="fileBt{{field.id}}" class="uk-button uk-button-default required" type="button" tabindex="-1" required={{field.options.required}}>{{field.fileTypeLabel}}</button>
    {{else}} 
    <button id="fileBt{{field.id}}" class="uk-button uk-button-default" type="button" tabindex="-1" required={{field.options.required}}>{{field.fileTypeLabel}}</button>
    {{/if}}
</div>
<div id="img{{field.id}}" class="uk-margin uk-hidden" style="height: auto;">
    <p>{{translate "fileTypePFInfo"}} <span uk-icon="icon: upload; ratio: 1"></span></p>
</div>
<img id="imgDev{{field.id}}" class="uk-margin uk-hidden" width="300" />
<button id="fileBtDel{{field.id}}" class="uk-button-danger uk-hidden" {{action "deleteFile"}}><span uk-icon="icon: close; ratio: 1"></span></button>
<button id="fileBtUpload{{field.id}}" class="uk-button-primary uk-hidden" {{action "uploadImage"}}><span uk-icon="icon: upload; ratio: 1"></span></button>
