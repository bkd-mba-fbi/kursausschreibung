<EventListSearch @queryChanged={{action "queryChanged"}} @events={{this.events}} as |filteredEvents|>
  <ListPagination @page={{this.page}} @items={{filteredEvents}} @route={{this.route}} as |eventsOnCurrentPage|>
    {{#each eventsOnCurrentPage as |event|}}
      <EventListItem @event={{event}} />
    {{/each}}
  </ListPagination>
</EventListSearch>
